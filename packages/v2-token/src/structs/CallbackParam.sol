struct TimeswapV2LiquidityTokenBurnCallbackParam {
    address token0;
    address token1;
    uint256 strike;
    uint256 maturity;
    uint160 liquidityAmount;
    bytes data;
}

/// @param token0 The first ERC20 token address of the pair.
